<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eis.healthylicous"
    android:versionCode="1"
    android:versionName="1.0" >

<uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/healthy_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!--  android:theme="@android:style/Theme.NoTitleBar.Fullscreen" -->
         
        <!--  Add Google Map Library -->
        <uses-library android:name="com.google.android.maps" />
        
           <activity
            android:name="com.eis.healthylicous.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eis.healthylicous.MainActivity"
            android:label="@string/app_name" >
             <intent-filter>
                <action android:name="com.eis.healthylicous.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity android:name="com.eis.healthylicous.Einstellungen" />
		<activity android:name="com.eis.healthylicous.Ernaehrungsplan" />
		<activity android:name="com.eis.healthylicous.Kalorien" />
		<activity android:name="com.eis.healthylicous.Profil" />
		<activity android:name="com.eis.healthylicous.Statistiken" />
		<activity android:name="com.eis.healthylicous.Strecken" />
		<activity android:name="com.eis.healthylicous.Wochenplan" />
		<activity android:name="com.eis.healthylicous.Zweitagesplan" />
                     
    </application>

</manifest>